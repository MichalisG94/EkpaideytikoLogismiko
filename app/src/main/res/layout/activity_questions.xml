<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.michalis.ekpaideytikologismiko.QuestionsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/questions_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_above="@+id/add_question_wrapper" />

    <LinearLayout
        android:id="@+id/add_question_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chartsBtn"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_show_chart_black_24dp"/>

        <ImageButton
            android:id="@+id/fab1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_circle_outline_black_24dp_2x" />

    </LinearLayout>

</RelativeLayout>