            android:name=".SearchResultsActivity"
            android:label="Αναζήτηση Προφίλ"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChartsActivity"
            android:label="Διαγράμματα"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditTheoryActivity"
            android:label="Επεξεργασία"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MultTheoryActivity"
