    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/math"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionsActivity"
            android:label="Ερωτήσεις"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditProfileActivity"
            android:label="Επεξεργασία Προφίλ"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddQuestionsActivity"
            android:label="Προσθήκη Ερωτήσεων"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfileActivity"
            android:label="Προφίλ"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TestActivity"
            android:label="Εξέταση Κεφαλαίου"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChapterChoiceActivity"
            android:label="Επιλογή Κεφαλαίου"
            android:screenOrientation="portrait" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".TheoryActivity"
            android:label="Επιλογή Κεφαλαίου"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MinusTheoryActivity"
            android:label="Αφαίρεση"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PlusTheoryActivity"
            android:label="Πρόσθεση"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WallActivity"
